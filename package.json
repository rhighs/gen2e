{
  "name": "gen2e",
  "version": "1.0.0",
  "description": "A playwright assistant library, allowing writing e2e tests as plain english instructions",
  "main": "src/index.ts",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "@hono/node-server": "^1.2.0",
    "hono": "^3.9.2",
    "openai": "^4.17.3",
    "sanitize-html": "^2.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.39.0",
    "@types/node": "^20.2.5",
    "@types/sanitize-html": "^2.9.4",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.2",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "start": "tsx ./tests/bin/startServer.ts",
    "build": "tsc --project tsconfig.build.json",
    "static:clear": "rm -rf .static/*",
    "format": "prettier --write ./src",
    "lint": "prettier --check ./src",
    "semantic-release": "semantic-release",
    "specs-count": "npx playwright test --list --reporter=json | node -e \"let c=s=>(s.specs?s.specs.length:0)+(s.suites?s.suites.reduce((a,n)=>a+c(n),0):0); console.log(JSON.parse(require('fs').readFileSync(0,'utf-8')).suites.reduce((a,s)=>a+c(s),0))\"",
    "test": "playwright test"
  },
  "keywords": [
    "ai",
    "test",
    "llm",
    "playwright",
    "e2e"
  ],
  "author": "Roberto Montalti",
  "license": "MIT"
}
