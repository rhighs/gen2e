{
  "name": "@rhighs/gen2e-browser-interpreter",
  "version": "1.0.0",
  "description": "An AI based interpreter, provide it human browser instructions and get generated playwright tests back",
  "main": "src/index.ts",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "@playwright/test": "^1.44.0",
    "@righs/gen2e": "file:../gen2e",
    "commander": "^12.0.0",
    "hono": "^3.9.2",
    "openai": "^4.17.3",
    "sanitize-html": "^2.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.2.5",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "start": "tsx ./src/index.ts",
    "build": "tsc --project tsconfig.build.json",
    "ts-node": "ts-node",
    "static:clear": "rm -rf .static/*",
    "format": "prettier --write ./src",
    "lint": "prettier --check ./src"
  },
  "keywords": [
    "ai",
    "test",
    "llm",
    "playwright",
    "e2e"
  ],
  "author": "Roberto Montalti",
  "license": "MIT"
}
